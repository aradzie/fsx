{
  "name": "@aradzie/fsx",
  "version": "0.3.1",
  "description": "A collection of utilities which extend the node's `fs` module in various ways.",
  "homepage": "https://github.com/aradzie/fsx/blob/master/packages/fsx#readme",
  "license": "MIT",
  "author": "Aliaksandr Radzivanovich <aradzivanovich@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/aradzie/fsx.git",
    "directory": "packages/fsx"
  },
  "engines": {
    "node": ">=16.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib-esm/index.js",
  "dependencies": {
